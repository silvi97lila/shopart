{% extends 'base.html.twig' %}

{% block title %}Shopping Cart{% endblock %}

{% block body %}
{% include 'nav.html.twig' %}
<div class="inner">
 <div class="container">
     {% if products == null %}
        <div class="empty inner">
            <h2 class="center">Shopping Bag Is Empty</h2>
            <div class="sad-face center">
                <i class="fas fa-meh"></i>
            </div>
            <p class="center mt-3">
                <a href="/">Go Back <i class="fas fa-chevron-left"></i></a>
            </p>
        </div>
     {% else %}
     <h2 class="center">
         <i class="fa fa-shopping-bag"></i>
         Shopping Cart
     </h2>
     <div class="primary-line"></div>
     <div class="shopping-cart row mt-5">
         <div class="cart-items col-lg-8">
             <div class="jumbotron">
                 <table class="table">
                     <thead>
                     <tr>
                         <th scope="col">Product</th>
                         <th scope="col">Price</th>
                         <th scope="col">Quantity</th>
                     </tr>
                     </thead>
                     <tbody>
                     {% for key,  value in products %}
                             <tr>
                                 <td>{{ value.title }}</td>
                                 <td>{{value.price}}</td>
                                 <td>@mdo</td>
                             </tr>
                     {% endfor %}
                     </tbody>
                 </table>
             </div>
         </div>
         <div class="cart-summary col-lg-4">
             <div class="jumbotron">
                 <h3>Cart Summary</h3>
                 <hr>
                 <div class="cart-calc">
                    <span style="display: flex">Card Subtotal: <p>${{subtotal}}</p> </span>
                    <span style="display: flex">Shipping: <p>${{ shipping }}</p> </span>
                    <span style="display: flex">Cart Total: <p>${{ total }}</p> </span>
                 </div>
                 <a href="{{ path('checkout') }}">
                 <button class="btn btn-light mt-2" >Checkout</button>
                 </a>
             </div>
         </div>
     </div>
     {% endif %}
 </div>
</div>
{% include 'footer.html.twig' %}
{% endblock %}
