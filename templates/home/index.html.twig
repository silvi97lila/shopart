{#Work section#}
<section class="works" id="works">
    <div class="container">
        <!-- Portfolio Section Heading -->
        <h1 class="works-heading">Works.</h1>
        <hr>
        <!-- Portfolio Grid Items -->
        <div class="row">
            <!-- Portfolio Items -->
            {% for work in works %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="work-item mx-auto" data-toggle="modal" >
                    <a href="{{ path('work_by_id', {'id':work.id}) }}">
                    <img class="img-fluid"  src="{{vich_uploader_asset(work, 'imageFile') }}" alt="">
                    <div class="work-item-info">
                        <div>
                            <h4 class="work-title">{{ work.title }}</h4>
                            <span class="work-category" style="color: #818a91"><b>{{ work.category }}</b></span>
                        </div>
                        <div class="price">
                            <p><b>${{ work.price }}</b></p>
                        </div>
                    </div>
                    </a>
                </div>
            </div>
            {% endfor %}

        <!-- /.row -->
        </div>
        <div class="navigation">
            {{ knp_pagination_render(works) }}
        </div>
    </div>
</section>
<section class="newsletter">
    <div class="newsletter-form">
        <h1>Get a notification for new product.</h1>
        <input type="text" class="newsletter-input mt-3" placeholder="Please Enter Your Email">
        <button class="btn btn-default mb-2">Send</button>
    </div>
</section>
{#End of work section#}

